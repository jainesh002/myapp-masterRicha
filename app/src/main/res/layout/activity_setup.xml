<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.discountfeed.SetupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageButton
        app:srcCompat="@drawable/com_facebook_auth_dialog_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/profileImageBtn"
        android:src="@color/inputLabelColor"
        android:background="@drawable/com_facebook_profile_picture_blank_portrait"
        android:scaleType="centerCrop"
        android:layout_height="100dp"
        android:layout_width="100dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/profileImageBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/setupNameField"
        android:hint="Enter Your Display Name.."
        android:background="?attr/actionModeBackground" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/profileImageBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/setupLocationField"
        android:hint="Enter Your Location"
        android:background="?attr/actionModeBackground" />


    <Button
        android:text="Finish Setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setupSubmitbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
